# top-most EditorConfig file
root = true

# Default for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Use tabs for most files
[*.{js,json,html,css,scss}]
indent_style = tab

# Use 2 spaces for YAML and Pug
[*.{yml,yaml,pug}]
indent_style = space
indent_size = 2

# Markdown (leave trailing whitespace, e.g., for line breaks)
[*.md]
trim_trailing_whitespace = false
