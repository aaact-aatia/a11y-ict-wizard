extends layout

block content
  h1#wb-cont(property="name")= title
  ul
    each item in item_list
      li
        if type === 'clause'
          a(href=item.url) #{item.number} #{item.name}
        else
          a(href=item.url) #{item.name}

    else
      li There are no #{type}s to display.

  a(href='/edit/' + type + '/create') Create #{type}
  <br>

  //- if type === 'question'
  //-   form(action="#", method='GET')
  //-   button(type='submit' class="btn.btn-default") Download questions
  //- else if type === 'clause'
  //-   form(action="#", method='GET')
  //-   button(type='submit' class="btn.btn-default") Download clauses
  //- else 
  //-   form(action="#", method='GET')
  //-   button(type='submit' class="btn.btn-default") Download infos

  if type === 'question'
    a(href="/edit/questionsdownload" ) Download questions list
  else if type === 'clause'
    a(href='/edit/clausesdownload') Download clauses list
  else 
    a(href='/edit/infosdownload' ) Download information list