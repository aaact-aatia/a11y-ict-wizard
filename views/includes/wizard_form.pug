-var i = 0

mixin checkbox(label, name, onlyIf, description, isUber, isUnique)
  if name === undefined
    -name = 'checkbox' + i++
  - var descri = description
  .checkbox(class=`checkbox-${name}`)
    label(for=name)
      input(id=name type='checkbox' name=name class=(onlyIf ? 'onlyIf' : false) class=(isUber ? 'isUber' : false) class=(isUnique ? 'isUnique' : false))
      span.remove-disabled-text
      | !{label}
    a(href=`#moreInfo${name}` aria-controls=`moreInfo${name}` class="wb-lbx lbx-modal" aria-label=`Open a dialog with more info on ${label}` tabindex="0")
      svg(width="24.1" height="24.1" viewBox="-10 -10 80 80" fill="none" xmlns="http://www.w3.org/2000/svg" style="position: absolute; transform: translate(0%, 10%)")
        path(d="M24 16V24M24 32H24.02M44 24C44 35.0457 35.0457 44 24 44C12.9543 44 4 35.0457 4 24C4 12.9543 12.9543 4 24 4C35.0457 4 44 12.9543 44 24Z" stroke="#2239ab" stroke-width="4" stroke-linecap="round" stroke-linejoin="round")

  section.mfp-hide.modal-dialog.modal-content.overlay-def(id=`moreInfo${name}`)
    header.modal-header
      h2.modal-title
        | More information on:
        br
        | '!{label}'
    div.modal-body(id=`dialog-${name}`)
      p Description:
      | !{descri}

section.wizard
  //- p
  //-   strong Instructions: 
  //-   | Check all that may apply to the ICT you are procuring.
  fieldset
    legend
      span.field-name The <abbr title="Information Communication Technology">ICT</abbr> solution and/or service:

    - var uberQuestions_list = [];
    - var nonUberQuestions_list = [];
    - var uniqueQuestions_list = [];
    
    each question in question_list
        if question.isUber
          - uberQuestions_list.push(question);
        else if question.isUnique
          - uniqueQuestions_list.push(question);
        else
          - nonUberQuestions_list.push(question);

    if step == 1
      .btn-group
        button#checkAll1(class="btn btn-default") Select all
        button#uncheckAll1(class="btn btn-default" style="margin-left : 3px") Deselect all
      .btn-group(style="margin-left : 10px")
        button#showAllRemovedStep1(class="btn btn-default") Show removed
        button#hideAllRemovedStep1(class="btn btn-default" style="margin-left : 3px")  Hide removed
      .btn-group(style="margin-left : 10px")
        button#undoLastStep1(class="btn btn-default") Undo
      <br/>
      div(aria-atomic="true" aria-live="polite")
        p.clause-count
          strong Total Clauses: <span class='clauseCount'>0</span>
      div.wizard-questions
        .row
          .col-md-6
            each question, index in uberQuestions_list
              if index < uberQuestions_list.length/2
                +checkbox(question.name, question._id, question.onlyIf, question.description, question.isUber, question.isUnique)
          .col-md-6
            each question, index in uberQuestions_list
              if index >= uberQuestions_list.length/2
                +checkbox(question.name, question._id, question.onlyIf, question.description, question.isUber, question.isUnique)
    else if step == 2
      .btn-group
        button#checkAll2(class="btn btn-default") Select all
        button#uncheckAll2(class="btn btn-default" style="margin-left : 3px") Deselect all
      .btn-group(style="margin-left : 10px")
        button#showAllRemovedStep2(class="btn btn-default") Show removed
        button#hideAllRemovedStep2(class="btn btn-default" style="margin-left : 3px")  Hide removed
      .btn-group(style="margin-left : 10px")
        button#undoLastStep2(class="btn btn-default") Undo
      <br/>
      div(aria-atomic="true" aria-live="polite")
        p.clause-count
          strong Total Clauses: <span class='clauseCount'>0</span>
      div.wizard-questions
        .row
          .col-md-6
            each question, index in nonUberQuestions_list
              if index < nonUberQuestions_list.length/2
                +checkbox(question.name, question._id, question.onlyIf, question.description, question.isUber, question.isUnique)
          .col-md-6
            each question, index in nonUberQuestions_list
              if index >= nonUberQuestions_list.length/2
                +checkbox(question.name, question._id, question.onlyIf, question.description, question.isUber, question.isUnique)
    else if step == 3
      .btn-group
        button#checkAll3(class="btn btn-default") Select all
        button#uncheckAll3(class="btn btn-default" style="margin-left : 3px") Deselect all
      .btn-group(style="margin-left : 10px")
        button#showAllRemovedStep3(class="btn btn-default") Show removed
        button#hideAllRemovedStep3(class="btn btn-default" style="margin-left : 3px")  Hide removed
      .btn-group(style="margin-left : 10px")
        button#undoLastStep3(class="btn btn-default") Undo
           <br/>
      div(aria-atomic="true" aria-live="polite")
        p.clause-count
          strong Total Clauses: <span class='clauseCount'>0</span>
      div.wizard-questions
        .row
          .col-md-6
            each question, index in uniqueQuestions_list
              if index < uniqueQuestions_list.length/2
                +checkbox(question.name, question._id, question.onlyIf, question.description, question.isUber, question.isUnique)
          .col-md-6
            each question, index in uniqueQuestions_list
              if index >= uniqueQuestions_list.length/2
                +checkbox(question.name, question._id, question.onlyIf, question.description, question.isUber, question.isUnique)

  //- Hidden data (for client-side javascript)
  div.wb-inv(aria-live="polite")
    p.disabledQuestions.hidden Nothing disabled
  .hidden(id=`question-data-step${step}`)
    each question in question_list
      ul.question(data-question-id=question._id)
        each clause in question.clauses
          li !{clause._id}
  
  .hidden(id=`uber-question-data-step${step}`)
    each question in uberQuestions_list
      //- p #{question._id}: #{question.name}
      ul.question(data-uber-question-id=question._id)
        each clause in question.clauses
          li !{clause._id}
  
  .hidden(id=`unique-question-data-step${step}`)
    each question in uniqueQuestions_list
      ul.question(data-unique-question-id=question._id)
        each clause in question.clauses
          li !{clause._id}
  
  .hidden(id=`non-uber-question-data-step${step}`)
    each question in nonUberQuestions_list
      ul.question(data-non-uber-question-id=question._id)
        each clause in question.clauses
          li !{clause._id}