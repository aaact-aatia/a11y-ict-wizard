-var i = 0

mixin checkbox(label, name, onlyIf)
  if name === undefined
    -name = 'checkbox' + i++
  .checkbox
      label(for=name)
        input(id=name type='checkbox' name=name class=(onlyIf ? 'onlyIf' : false) checked)
        | !{label}

